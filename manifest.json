{
	"manifest_version": 2,
	"name": "refresh",
	"version": "1.0.5",
	"description": "Reload your page resources smartly: html, js, css",
	"icons": {
		"128": "img/icon128.png",
		"48": "img/icon48.png",
        "16": "img/icon16.png"
	},
	"permissions": ["tabs", "\u003Call_urls\u003E"],
    "browser_action": {
        "default_icon": "img/icon16-off.png",
        "default_title": "refresh"
    },
    "background": {
        "page": "background.html"
    },
    "plugins": [ 
        {
            "path": "plugin/npFileManager.dll",
            "public": false
        },
        {
            "path": "plugin/npFileManager_64.so",
            "public": false
        },
        {
            "path": "plugin/npFileManager.so",
            "public": false
        },
        {
            "path": "plugin/npFileManager.plugin",
            "public": false
        }
    ]
}